#!/usr/bin/env node

/**
 * SVG Annotator CLI Executable
 * 
 * This is the main executable wrapper for the svg-annotator CLI tool.
 * It loads and runs the compiled JavaScript CLI.
 */

import { resolve, dirname } from 'path';
import { fileURLToPath } from 'url';

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

// Load and run the compiled JavaScript CLI
const cliPath = resolve(__dirname, '../lib/index.js');

// Use dynamic import to load and run the CLI
async function runCLI() {
  try {
    const { spawn } = await import('child_process');
    
    const child = spawn('node', [cliPath, ...process.argv.slice(2)], {
      stdio: 'inherit'
    });

    child.on('exit', (code) => {
      process.exit(code || 0);
    });

    child.on('error', (error) => {
      console.error('Failed to start svg-annotator:', error.message);
      process.exit(1);
    });
  } catch (error) {
    console.error('Error loading svg-annotator CLI:', error.message);
    process.exit(1);
  }
}

runCLI();